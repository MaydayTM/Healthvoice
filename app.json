{
  "expo": {
    "name": "HealthVoice",
    "slug": "healthvoice",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "healthvoice",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0ea5e9"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.healthvoice.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "HealthVoice needs access to your microphone to record voice logs.",
        "NSHealthShareUsageDescription": "HealthVoice reads your health data to provide insights.",
        "NSHealthUpdateUsageDescription": "HealthVoice writes health data to sync your logs."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0ea5e9"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.healthvoice.app",
      "permissions": ["android.permission.RECORD_AUDIO"]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-av",
        {
          "microphonePermission": "HealthVoice needs access to your microphone to record voice logs."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
